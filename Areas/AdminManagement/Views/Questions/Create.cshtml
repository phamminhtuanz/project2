@model ExamManagement.Models.Question

@{
    ViewData["Title"] = "Tạo mới Câu hỏi"; // Vietnamese title

    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Tạo mới Câu hỏi</h1>

<h4>Câu hỏi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">Môn học</label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="control-label">Nội dung câu hỏi</label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Level" class="control-label">Độ khó</label>
                <select asp-for="Level" class="form-control">
                    <option value="Easy">Dễ</option>
                    <option value="Medium">Trung bình</option>
                    <option value="Hard">Khó</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="CreatedBy" class="control-label">Người tạo</label>
                <select asp-for="CreatedBy" class="form-control" asp-items="ViewBag.CreatedBy"></select>
            </div>

            <h4>Đáp án</h4>

            @for (int i = 0; i < 4; i++)
            {
                <div class="form-group">
                    <label for="Answers">Đáp án @(i + 1)</label>
                    <input type="text" class="form-control" name="Answers" required />

                    <div class="form-check">
                        <input type="radio" class="form-check-input" name="CorrectAnswerIndex" value="@i" @(i == 0 ? "checked" : "") />
                        <label class="form-check-label">Đáp án đúng</label>
                    </div>
                </div>
            }

            <div class="form-group mt-3">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #ffffff;
    }

    h1, h4 {
        color: #404080;
    }

    label {
        color: #404080;
    }

    .form-control {
        border-color: #404080;
    }

    .btn-primary {
        background-color: #ff9000;
        border-color: #ff9000;
    }

        .btn-primary:hover {
            background-color: darken(#ff9000, 10%);
            border-color: darken(#ff9000, 10%);
        }

    .btn-secondary {
        background-color: #404080;
        border-color: #404080;
        color: #ffffff;
    }

        .btn-secondary:hover {
            background-color: darken(#404080, 10%);
            border-color: darken(#404080, 10%);
        }

    .text-danger {
        color: #dc3545;
    }
</style>
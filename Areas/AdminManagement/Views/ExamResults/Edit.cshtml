@model ExamManagement.Models.ExamResult

@{
    ViewData["Title"] = "Sửa Kết quả Thi"; // Vietnamese title
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Sửa Kết quả Thi</h1>  

<h4>Kết quả Thi</h4>  
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ResultId" />
            <div class="form-group">
                <label asp-for="StudentId" class="control-label">Sinh viên</label>   
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExamId" class="control-label">Môn học</label>   
                <select asp-for="ExamId" class="form-control" asp-items="ViewBag.ExamId"></select>
                <span asp-validation-for="ExamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label">Điểm</label>   
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmittedAt" class="control-label">Ngày nộp</label>   
                <input asp-for="SubmittedAt" class="form-control" />
                <span asp-validation-for="SubmittedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />   
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #ffffff;
    }

    h1, h4 {
        color: #404080;
    }

    label {
        color: #404080;
    }

    .form-control {
        border-color: #404080;
    }

    .btn-primary {
        background-color: #ff9000;
        border-color: #ff9000;
    }

        .btn-primary:hover {
            background-color: darken(#ff9000, 10%);
            border-color: darken(#ff9000, 10%);
        }

    .btn-secondary {
        background-color: #404080;
        border-color: #404080;
        color: #ffffff;
    }

        .btn-secondary:hover {
            background-color: darken(#404080, 10%);
            border-color: darken(#404080, 10%);
        }

    .text-danger {
        color: #dc3545;
    }
</style>
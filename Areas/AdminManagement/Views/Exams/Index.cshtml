@model IEnumerable<ExamManagement.Models.Exam>

@{
    ViewData["Title"] = "Danh sách Bài thi"; // Vietnamese title
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<h1>Danh sách Bài thi</h1>  

<p>
    <form asp-controller="Exams" asp-action="Index"  method="get" class="form-inline">
        <div class="form-group">
            <label class="sr-only" for="keyword">Tìm theo tên loại</label>
            <input class="form-control" name="searchString" id="keyword" placeholder="Nhập tên cần tìm" />
        </div>
        <button type="submit" class="btn btn-default mr-1"><i class="fas fa-search"></i></button>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Thêm mới</a>
    </form>

</p>

<table class="table table-striped table-hover">
     
    <thead class="table-dark">
         
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedByNavigation)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedByNavigation.FullName)
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ExamId" class="btn btn-sm btn-warning">Sửa</a>   
                    <a asp-action="Details" asp-route-id="@item.ExamId" class="btn btn-sm btn-info">Chi tiết</a>   
                    <a asp-action="Delete" asp-route-id="@item.ExamId" class="btn btn-sm btn-danger">Xóa</a>   
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: #ffffff;
    }

    .table-dark {
        background-color: #404080;
        color: #ffffff;
    }

    .btn-primary {
        background-color: #ff9000;
        border-color: #ff9000;
    }

        .btn-primary:hover {
            background-color: darken(#ff9000, 10%);
            border-color: darken(#ff9000, 10%);
        }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
    }

        .btn-warning:hover {
            background-color: darken(#ffc107, 10%);
            border-color: darken(#ffc107, 10%);
        }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: darken(#17a2b8, 10%);
            border-color: darken(#17a2b8, 10%);
        }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: darken(#dc3545, 10%);
            border-color: darken(#dc3545, 10%);
        }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
</style>
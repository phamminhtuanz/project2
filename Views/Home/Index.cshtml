<script>
	document.addEventListener("DOMContentLoaded", function () {
		let slider = document.querySelector(".slider");
		let imgWidth = slider.children[0].offsetWidth + 20; // Kích thước ảnh + khoảng cách
		let index = 0;

		function slideNext() {
			index++;
			slider.style.transition = "transform 1s cubic-bezier(0.25, 0.1, 0.25, 1)";
			slider.style.transform = `translateX(-${index * imgWidth}px)`;

			setTimeout(() => {
				if (index >= slider.children.length / 2) {
					slider.style.transition = "none";
					index = 0;
					slider.style.transform = `translateX(0)`;
				}
			}, 1000);
		}

		setInterval(slideNext, 3000);
	});
</script>






	/* Container */
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 40px 20px;
	}

	/* Title */
	.title {
		text-align: center;
		font-size: 32px;
		font-weight: 700;
		color: #865DFF;
		margin-bottom: 40px;
		text-transform: uppercase;
		letter-spacing: 1.5px;
		position: relative;
	}

		.title::after {
			content: '';
			position: absolute;
			bottom: -10px;
			left: 50%;
			transform: translateX(-50%);
			width: 60px;
			height: 4px;
			background: linear-gradient(90deg, #865DFF, #6a11cb);
			border-radius: 2px;
		}

	/* Slider Wrapper */
	.slider-wrapper {
		width: 100%;
		max-width: 1100px;
		overflow: hidden;
		position: relative;
		margin: 0 auto 60px;
		padding: 20px 0;
	}

	.slider {
		display: flex;
		gap: 20px;
		width: max-content;
		transition: transform 1s cubic-bezier(0.25, 0.1, 0.25, 1); /* Chuyển động mượt */
	}

		.slider img {
			height: 100px;
			max-width: 120px;
			object-fit: contain;
			flex-shrink: 0;
		}
	/* Features */
	.features {
		display: flex;
		justify-content: center;
		gap: 40px;
		flex-wrap: wrap;
	}

	.feature-box {
		width: 300px;
		padding: 30px;
		border-radius: 15px;
		text-align: center;
		background: #fff;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

		.feature-box:hover {
			transform: translateY(-10px);
			box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
		}

		.feature-box i {
			font-size: 40px;
			color: #865DFF;
			margin-bottom: 15px;
			transition: color 0.3s ease;
		}

		.feature-box:hover i {
			color: #6a11cb;
		}

	.feature-title {
		font-size: 20px;
		font-weight: 600;
		color: #333;
		margin-bottom: 10px;
	}

	.feature-desc {
		font-size: 15px;
		color: #666;
		line-height: 1.5;
		margin-bottom: 15px;
	}

	.feature-box a {
		text-decoration: none;
		color: #865DFF;
		font-weight: 600;
		font-size: 14px;
		padding: 8px 20px;
		border: 2px solid #865DFF;
		border-radius: 25px;
		transition: all 0.3s ease;
	}

		.feature-box a:hover {
			background: #865DFF;
			color: #fff;
			border-color: #6a11cb;
		}
</style>
